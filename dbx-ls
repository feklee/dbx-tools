#!/bin/bash

source "`dirname $0`/init.sh"

OPTIONS[l]="detailed listing"
OPTIONS[R]="recursive listing"

NON_OPTION_ARGS="[PATH]"

DESCRIPTION=$(cat <<EOF
List information about the current Dropbox directory, or if
specified, about PATH.
EOF
	   )

dbx-parse-options "$@"
shift $((OPTIND-1))

DBX_PATH=`dbx-path "$1"` || exit

test -n "$ENABLED_OPTIONS" && S=-$ENABLED_OPTIONS || S=""
dbxcli ls $S "$DBX_PATH" || exit

# Add trailing line break because `dbxcli ls' sometimes doesn't
# without `-l':
dbx-test-option-enabled l || echo
