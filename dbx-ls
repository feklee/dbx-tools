#!/bin/bash

source "`dirname $0`/init.sh"

OPTIONS[l]="detailed listing"
OPTIONS[R]="recursive listing"

NON_OPTION_ARGS="[PATH]"

DESCRIPTION=$(cat <<EOF
List information about the current Dropbox directory, or if
specified, about PATH.
EOF
	   )

parse_options "$@"
echo $ENABLED_OPTIONS
test_option_enabled l && echo "l is enabled"
exit

DBX_PATH=`dbx-path "$1"` || exit
dbxcli ls "$DBX_PATH"

echo # dbxcli `ls' ommits line break
# TODO: Only use linebreak if directory and no option
