#!/bin/bash

source "`dirname $0`/init.sh"

# TODO: add options -h and -l (add -h also to other commands)

ARGS="[PATH]"
DESCRIPTION=$(cat <<EOF
Lists information about the current Dropbox directory, or if
specified, about PATH.
EOF
	   )

DBX_PATH=`dbx-path "$1"` || exit
dbxcli ls "$DBX_PATH"
echo # dbxcli `ls' ommits line break
